# Production Environment Variables for Render.com
NODE_ENV=production
PORT=3000

# CORS Configuration - Update with your Render.com URL
ALLOWED_ORIGINS=https://YOUR_ACTUAL_APP_NAME.onrender.com  # REPLACE with real URL

# Database Configuration
DB_PATH=./server/data/payments.json

# Security Settings
ENCRYPTION_KEY=SMS_VARANASI_MASTER_KEY_2024_ULTRA_SECURE_256_BIT_ENCRYPTION
SECURITY_MONITORING=true
THREAT_INTELLIGENCE=true
AUTO_BLOCK_THREATS=false
INTRUSION_DETECTION=true

# DDoS Protection Levels (Relaxed for production)
DDOS_PROTECTION_LEVEL=standard
RATE_LIMIT_AGGRESSIVE=50
RATE_LIMIT_STANDARD=100
RATE_LIMIT_WINDOW=60000

# IP Security (Disabled for production)
BLOCK_TOR_EXITS=false
BLOCK_VPN_PROXIES=false
GEOLOCATION_BLOCKING=false

# Advanced Features
SERVER_FINGERPRINT_OBFUSCATION=true
LOCATION_MASKING=false
IP_CLOAKING=false
SOCIAL_ENGINEERING_PROTECTION=false

# Security Logging
SECURITY_LOG_LEVEL=info
SECURITY_LOG_FILE=./logs/security.log
INCIDENT_REPORTING=true

# Data Protection
ENCRYPT_ALL_DATA=true
SECURE_SESSIONS=true
SECURE_TRANSMISSION=true
MEMORY_PROTECTION=true

# Production Security
HIDE_SERVER_INFO=true
DISABLE_DEBUG_INFO=true
SECURE_HEADERS=true
CONTENT_SECURITY_POLICY=strict

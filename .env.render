# Render.com Environment Variables
# Copy these to your Render.com dashboard under "Environment" tab

# ==============================================
# REQUIRED ENVIRONMENT VARIABLES
# ==============================================

NODE_ENV=production
PORT=10000  # Render will override this automatically

# IMPORTANT: Update this with your actual Render.com URL after first deployment
# Format: https://your-service-name.onrender.com
ALLOWED_ORIGINS=https://YOUR_ACTUAL_SERVICE_NAME.onrender.com  # REPLACE after first deployment

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Path for database file (ephemeral on Render free tier)
# Data will be lost on restart - consider using external database for production
DB_PATH=/tmp/payments.json

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Encryption key (CHANGE THIS IN PRODUCTION!)
ENCRYPTION_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_256_BITS

# Security features (relaxed for Render.com)
SECURITY_MONITORING=true
THREAT_INTELLIGENCE=false
AUTO_BLOCK_THREATS=false
INTRUSION_DETECTION=false

# ==============================================
# RATE LIMITING (Production optimized)
# ==============================================

DDOS_PROTECTION_LEVEL=standard
RATE_LIMIT_AGGRESSIVE=100
RATE_LIMIT_STANDARD=200
RATE_LIMIT_WINDOW=60000

# ==============================================
# IP SECURITY (Disabled for production)
# ==============================================

BLOCK_TOR_EXITS=false
BLOCK_VPN_PROXIES=false
GEOLOCATION_BLOCKING=false

# ==============================================
# ADVANCED FEATURES
# ==============================================

SERVER_FINGERPRINT_OBFUSCATION=false
LOCATION_MASKING=false
IP_CLOAKING=false
SOCIAL_ENGINEERING_PROTECTION=false

# ==============================================
# LOGGING
# ==============================================

SECURITY_LOG_LEVEL=info
SECURITY_LOG_FILE=/tmp/logs/security.log
INCIDENT_REPORTING=true

# ==============================================
# DATA PROTECTION
# ==============================================

ENCRYPT_ALL_DATA=true
SECURE_SESSIONS=true
SECURE_TRANSMISSION=true
MEMORY_PROTECTION=true

# ==============================================
# PRODUCTION SETTINGS
# ==============================================

HIDE_SERVER_INFO=true
DISABLE_DEBUG_INFO=true
SECURE_HEADERS=true
CONTENT_SECURITY_POLICY=strict

# ==============================================
# INSTRUCTIONS
# ==============================================

# 1. Go to your Render.com service dashboard
# 2. Navigate to "Environment" tab
# 3. Add each variable above (one per line)
# 4. IMPORTANT: Update ALLOWED_ORIGINS with your actual Render URL
# 5. IMPORTANT: Change ENCRYPTION_KEY to a secure random string
# 6. Click "Save Changes"
# 7. Service will automatically redeploy

# ==============================================
# OPTIONAL: Custom Domain
# ==============================================

# If using a custom domain, add it to ALLOWED_ORIGINS (comma-separated):
# ALLOWED_ORIGINS=https://your-service.onrender.com,https://yourdomain.com
